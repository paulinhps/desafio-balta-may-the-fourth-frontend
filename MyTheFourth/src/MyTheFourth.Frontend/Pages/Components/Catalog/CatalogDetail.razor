@using MyTheFourth.Frontend.Constants

<div class="catalog-detail-container">
 <a href="@Link">
    <div class="banner card m-2" style="max-width: 200px;">
    <div class="row g-0 h-100">
        <div class="row-md-4">
            <img height="320" width="200"src="@ImgUrl" class="img-fluid rounded-start" alt="image">
        </div>

        <div class="row-md-8 d-flex align-items-end">
            <div class="card-body d-flex justify-content-center align-items-center">
               <h5 class="card-title">@Name</h5>
            </div>
        </div>
    </div>
</div>
 </a>
</div>


@code {
    protected override void OnParametersSet()
    {
        if (string.IsNullOrEmpty(ImgUrl))
            ImgUrl = @CatalogImagesUrl.DefaultImageUrl;
    }

    [Parameter]
    public string ImgUrl { get; set; } = null!;
    [Parameter]
    public string Name { get; set; } = string.Empty;
    [Parameter]
    public string? Link { get; set; }
}