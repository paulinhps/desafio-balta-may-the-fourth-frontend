@code {
    [Parameter]
    public string vehicleId { get; set; } = null!;

    private Vehicle? Vehicle { get; set; }

    protected override async Task OnInitializedAsync() => Vehicle = await VehiclesService.GetVehicleAsync(vehicleId);
}    
